[user]
    name = Andr√©s Del Carpio
    email = adc@adc.pe
[core]
    editor = nvim
[init]
    defaultBranch = main
[alias]
    a = add
    ch = checkout
    conf = config --global -l
    co = commit
    cm = commit -m
    br = branch
    d = diff
    ft = fetch
    last = log -1 HEAD --stat
    ll = log --oneline
    pl = pull
    ps = push
    rem = remote
    rs = restore
    rss = restore --staged
    rv = remote -v
    st = status -sb
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[help]
    autocorrect = 20
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = red
[credential]
    helper = store
[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
