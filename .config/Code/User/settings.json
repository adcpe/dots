{
  "window.title": "${dirty}${activeFolderMedium}/${activeEditorShort}${separator}${rootName}${separator}${appName}",
  "window.titleBarStyle": "custom",

  // telemetry
  "code-runner.enableAppInsights": false,
  "gitlens.telemetry.enabled": false,
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",

  "workbench.colorTheme": "Night Owl (No Italics)",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.enableExperiments": false,
  "workbench.tree.renderIndentGuides": "none",

  "terminal.integrated.defaultProfile.linux": "fish",

  // fonts, etc
  "editor.fontFamily": "Noto Sans Mono, Inconsolata, Fira Code, Victor Mono, Hack, Iosevka",
  "editor.fontWeight": "400",
  "editor.fontSize": 18,
  "editor.fontLigatures": false,
  "editor.lineHeight": 30,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.mouseWheelZoom": false,
  "editor.guides.indentation": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.rulers": [
    { "column": 80, "color": "#FFFF0040" },
    { "column": 100, "color": "#FF000040" }
  ],
  "editor.minimap.maxColumn": 100,
  "editor.minimap.showSlider": "always",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,

  "files.autoSave": "afterDelay",
  "extensions.autoUpdate": true,
  "diffEditor.renderSideBySide": true,
  "explorer.compactFolders": false,

  // markdown preview
  "markdown.preview.fontFamily": "Noto Sans, Ubuntu, Droid Sans, sans-serif",
  "markdown.preview.fontSize": 18,

  "code-runner.clearPreviousOutput": true,
  "explorer.confirmDelete": false,
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.cursorWidth": 2,
  "files.insertFinalNewline": true,
  "explorer.confirmDragAndDrop": false,

  // ruby
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    },
    "reek": {
      "useBundler": true
    }
  },
  "ruby.format": "rubocop",
  "code-runner.executorMap": {
    "ruby": "$HOME/.asdf/shims/ruby"
  },
  "solargraph.commandPath": "/home/adc/.asdf/shims/solargraph",
  "solargraph.formatting": true,

  // file associations
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[nunjucks]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[properties]": { "editor.defaultFormatter": "yy0931.gitconfig-lsp" },
  "[pug]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[ruby]": { "editor.defaultFormatter": "castwide.solargraph" },
  "[sass]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[vue]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  "emmet.includeLanguages": {
    "django-html": "html",
    "erb": "html",
    "javascript": "javascriptreact",
    "njk": "html"
  },
  "files.associations": {
    ".gitgnore": "ignore",
    "*.cjs": "javascript",
    "*.erb": "erb",
    "*.md": "markdown",
    "*.mdx": "markdown",
    "*.styl": "stylus",
    "*.sass": "sass",
    "*.json": "jsonc",
    "*.njk": "nunjucks"
  },

  "emmet.triggerExpansionOnTab": true,
  "tailwindCSS.lint.invalidTailwindDirective": "ignore",

  // git lens
  "diffEditor.codeLens": true,
  "gitlens.codeLens.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,

  // cSpell
  "cSpell.enableFiletypes": ["md", "!*"],
  "cSpell.userWords": [
    "adcpe",
    "Alacritty",
    "castwide",
    "Codesandbox",
    "dotfiles",
    "gitmodules",
    "Laravel",
    "Nord",
    "Nuxt",
    "pomodoro",
    "postlist",
    "readdir",
    "rebornix",
    "Rubocop",
    "Solargraph",
    "templating",
    "Unported",
    "unstage",
    "wordcount"
  ],

  "editor.minimap.renderCharacters": false,
  "php.validate.executablePath": "/home/adc/.asdf/shims/php",
  "xml.server.vmargs": "-Xmx256M",
  "xml.symbols.maxItemsComputed": 10000,
  "prettier.configPath": "/home/adc/.prettierrc.js",
  "prettier.prettierPath": "/home/adc/.asdf/shims/prettier",
  "volar.autoCompleteRefs": true,
  "volar.format.initialIndent": {
    "javascript": true,
    "css": true,
    "html": true
  },
  "volar.icon.preview": false,
  "base16.generator.activatedThemes": [
    "base16-dracula-dark",
    "base16-gruvbox-dark-hard",
    "base16-gruvbox-dark-medium",
    "base16-gruvbox-dark-pale",
    "base16-gruvbox-dark-soft",
    "base16-gruvbox-material-dark-hard",
    "base16-gruvbox-material-dark-medium",
    "base16-gruvbox-material-dark-soft"
  ],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 2,
  "indentRainbow.updateDelay": 1000,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.20)",
    "rgba(127,255,127,0.20)",
    "rgba(255,127,255,0.20)",
    "rgba(79,236,236,0.20)"
  ],

  "files.trimTrailingWhitespace": true,
  "material-icon-theme.folders.associations": {
    "py": "python"
  },
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.folders.color": "#26a69a",
  "security.workspace.trust.untrustedFiles": "open",
  "github.gitProtocol": "ssh",
  "editor.bracketPairColorization.enabled": false
}
