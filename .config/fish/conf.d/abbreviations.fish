abbr -a dcom 'dots commit'

# pnpm
abbr -a pni 'pnpm i'
abbr -a pnid 'pnpm i -D'
abbr -a pnig 'pnpm i -g'
abbr -a pnx 'pnpm dlx'

# various
abbr -a cat 'bat'
abbr -a ls 'exa --group-directories-first'
