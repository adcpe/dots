abbr -a pacun 'yay -Rns'
abbr -a pacu 'yay -Syu'
abbr -a pacup 'yay -Syyu'
abbr -a pacro 'yay -Rns (yay -Qdtq)'
abbr -a pacs 'yay -Ss'
abbr -a pacsl 'yay -Qs'
abbr -a paccc 'yay -Sc'
abbr -a paclo 'yay -Qdt'
